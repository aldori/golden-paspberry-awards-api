{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "@typescript-eslint/quotes": [
            "error",
            "single"
        ],
    },
    "overrides": [
        {
            "files": [
                "src/**/*.{ts,tsx}"
            ],
            "rules": {}
        }
    ]
}